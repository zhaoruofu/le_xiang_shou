
page{
    max-width: 100%;
    overflow-x:hidden;
}
.head-container{
    width: 100%;
    height: 560rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    background-color: #005CA2;
}
.top-container{
    display: flex;
    flex-direction: row;
    padding-left: 20rpx;
    margin-top: -21rpx;
}
.clock{
    width: 38rpx;
    height: 38rpx;
}
.date{
    font-size:28rpx;
    font-weight: 800;
    color:#CCDEEC;
    padding-left: 10rpx;
    letter-spacing: 5rpx;
}
.total-container{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    margin-top: -26rpx;
}
.number-container{
    display: flex;
    flex-direction: row;
    height: 120rpx;
}
.number1-container{
    display: flex;
    flex-direction: column;
}
 .weight{
    font-size: 35rpx;
    font-weight: 500;
    color: white;
    padding-top: 35rpx;
} 
.layer{
    display: flex;
    flex-direction: column;
}
.grade{
     font-size: 160rpx;
     font-weight: 120;
     color: white;
}
.decimal{
     color: white;
     padding-top: 40rpx;
     font-size: 56rpx;
} 
.health{
    font-size: 55rpx;
    font-weight: 500;
    color: white;
    padding-top: 35rpx;
}
.grade1{
     color: white;
     padding-top: 15rpx;
     font-size: 56rpx;
     padding-left: 60rpx;
}
.middle-container{
    width: 96%;
    height: 240rpx;
    margin-bottom: -21rpx;
    background-color: #337DB5;
    display: flex;
    flex-direction: row; 
    justify-content: space-around;
    margin-left: 18rpx;
    border-top-left-radius: 4%;
    border-top-right-radius: 4%;
}
.first-container{
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    padding: 100rpx 9rpx 80rpx;
    color: white;
}
.second-container{
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    padding: 100rpx 9rpx 80rpx;
    margin-left: 30rpx;
    color: white;
}
.third-container{
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    padding: 100rpx 9rpx 80rpx;
    margin-left: 30rpx;
    color: white;
}
.word{
    word-spacing: 15rpx;
    margin-bottom: 20rpx;
}
.line{
    position: relative;
    left: 12rpx;
    top: 39rpx;
    height: 180rpx;
    border-left: 3px  solid white;
}
.img{
    position: absolute;
    top: 488rpx;
    left: 356rpx;
    width: 88rpx;
    height: 88rpx;
}

.data-display{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-left: 20rpx;
    margin-top: 20rpx;
    width: 95%;
    height: 700rpx;
    border-top-left-radius: 4%;
    border-top-right-radius: 4%;
    background-color: #005CA2;
}
.trend{
    color: #fff;
    font-size: 56rpx;
}
.canvas{
    width: 95%;
    height: 600rpx;
    background-color: #005CA2;
}
.data-management{
    display: flex;
    flex-direction: row;
    justify-content: baseline;
    margin: 40rpx 0rpx 10rpx 20rpx;
    color: #ACACAC;
}
.data-img{
    height: 50rpx;
    width: 50rpx;
    padding-right: 20rpx;
}
.data-management-container{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    margin-top: 0rpx;
    height: 140rpx;
    border: 1rpx solid #D5D5D5;
}
.data-record-container{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}
.data-cord-container{
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;
    margin-top: 25rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    line-height: 52rpx;
}
.data-record{
    font-size: 36rpx;
}
.data-everyday{
    color: #ACACAC;
    font-size: 28rpx; 
}
.everyday-img{
    width: 90rpx;
    height: 90rpx;
    margin: 30rpx 30rpx;
    background-color:#D5D5D5;
}
.recommend-recipe{
    width: 100%;
    height: 130rpx; 
    margin-top: 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    background-color: #005CA2;
}
.trophy{
    height: 60rpx;
    width: 60rpx;
}
.recommend-text{
    color: #D5D5D5;
    margin-left: -132rpx;
}
.week-recipe{
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.this-week{
    width: 740rpx;
    margin-left: 5rpx;
    height: 80rpx;
    text-align: center;
    padding-top: 25rpx;
    color: #ACACAC;
    font-size: 48rpx;
    border:1rpx solid #A6A6A6;
}
.text-img-container{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    font-size: 30rpx; 
    color: #ACACAC;
    margin: 20rpx 20rpx;
}
.clock1{
    width: 40rpx;
    height: 40rpx;
    margin-right: 15rpx;
}
.popularization-container{
    width: 90%;
    height: 80rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-left: 35rpx;
}
.question-mark{
    display: flex;
    flex-direction: row;
}
.popularization-img{
    width: 40rpx;
    height: 40rpx;
}
.popularization-text{
    font-size: 30rpx;
    color: #ACACAC;
    margin-left: 10rpx;
}


