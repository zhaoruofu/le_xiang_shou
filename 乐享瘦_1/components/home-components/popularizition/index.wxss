
.SP-container{
    width: 98%;
    height: 200rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    border: 1rpx solid #D5D5D5;
}
.food-img{
    height: 150rpx;
    width: 150rpx;
    margin-left: 25rpx;
    margin-top: 25rpx;
}
.sub-container{
    width: 450rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    color: #838383;
}
.equipment-container{
    /* width: 80%; */
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    font-size: 30rpx;
    margin-top: 25rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.line{
    width: 4rpx;
    height: 32rpx;
    background-color: #838383;
    margin: 8rpx 10rpx;
}
.right-arrow{
    height: 60rpx;
    width: 60rpx;
    position: relative;
    top: 81rpx;
}
.sub-low{
    font-size: 30rpx;
}
.user-img{
    width: 28rpx;
    height: 28rpx;
}
.bottom-container{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    font-size: 28rpx;
}

